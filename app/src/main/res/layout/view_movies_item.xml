<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding"
        card_view:cardCornerRadius="@dimen/padding_md"
        card_view:cardUseCompatPadding="true"
        style="@style/CardView.Light"
        android:id="@+id/movies_item">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/width"
                android:layout_height="@dimen/height"
                android:scaleType="centerCrop"
                android:contentDescription="@string/app_name"/>

            <LinearLayout
                android:layout_width="@dimen/width_container"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_md">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_overView"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_summary"
                    android:layout_marginTop="@dimen/spacing"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/favorite"
                android:layout_width="@dimen/favorite"
                android:layout_height="@dimen/favorite"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_favorite_border"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>